<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MBaqueroPTres.Views.MBQuoteView"
             Title="MBQuoteView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Model.quote}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Model.author}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            Text="Cargar Cita"
            Command="{Binding ComandoCargarQuote}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
